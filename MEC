This is the Mechanical Engineering department file.
Contains information about MEC department and its workshop facilities.

// Example of a switch case in Java for MEC students
import java.util.Scanner;

public class MechanicalWorkshops {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter workshop number (1-4): ");
        int workshop = scanner.nextInt();
        
        switch(workshop) {
            case 1:
                System.out.println("MEC101: Manufacturing Workshop");
                break;
            case 2:
                System.out.println("MEC202: CAD/CAM Workshop");
                break;
            case 3:
                System.out.println("MEC303: Thermodynamics Workshop");
                break;
            case 4:
                System.out.println("MEC404: Fluid Mechanics Workshop");
                break;
            default:
                System.out.println("Invalid workshop number");
        }
        
        scanner.close();
    }
} 